{
  "name": "node-ts-express-boilerplate",
  "version": "1.0.0",
  "description": "",
  "main": "app/index.js",
  "scripts": {
    "test": "jest --runInBand",
    "test:watch": "npm run test -- --watch",
    "start": "npm run build && node --max-old-space-size=4096 build/server.js",
    "build": "npm run tsc",
    "tsc": "tsc",
    "dev": "DEBUG=http,mail,express:* nodemon src/server.ts",
    "lint": "eslint . --ext .ts",
    "prettier-format": "prettier --config .prettierrc 'src/**/*.ts' --write"
  },
  "author": "",
  "license": "ISC",
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/__tests__/*.+(ts|tsx|js)"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "jest --runInBand --passWithNoTests && npm run lint"
    }
  },
  "dependencies": {
    "@sentry/node": "^6.5.1",
    "@types/morgan": "^1.9.2",
    "cors": "^2.8.5",
    "dotenv": "^8.6.0",
    "express": "^4.17.1",
    "express-jwt": "^6.0.0",
    "express-validator": "^6.11.1",
    "helmet": "^4.4.1",
    "jwks-rsa": "^2.0.3",
    "moment": "^2.29.1",
    "mongoose": "^5.12.13",
    "morgan": "^1.10.0",
    "typescript": "^4.3.2",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.12",
    "@types/jest": "^26.0.22",
    "@types/node": "^14.17.3",
    "@types/qs": "^6.9.6",
    "@typescript-eslint/eslint-plugin": "^3.10.1",
    "@typescript-eslint/parser": "^3.10.1",
    "eslint": "^7.28.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.0",
    "jest": "^26.4.2",
    "morgan-body": "^2.6.5",
    "nodemon": "^2.0.7",
    "prettier": "^2.3.1",
    "ts-jest": "^26.4.1",
    "ts-node": "^9.1.1",
    "tslint": "^6.1.3"
  }
}
